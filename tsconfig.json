{
  "compilerOptions": {
    "strict": true,
    "outDir": "lib",
    "target": "es2020",
    "lib": ["es2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "sourceMap": true,
    "declaration": true,
    "alwaysStrict": true,
    "noUnusedLocals": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*.ts"]
}
